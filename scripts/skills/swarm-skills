#!/usr/bin/env bash
set -euo pipefail

SCRIPT_PATH="$(readlink -f "$0")"
SCRIPT_DIR="$(cd "$(dirname "$SCRIPT_PATH")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/../.." && pwd)"

if [ "$#" -lt 1 ]; then
  exec python3 "$REPO_ROOT/skills.py" --help
fi

COMMAND="$1"
shift

if [ "$COMMAND" = "list" ]; then
  exec python3 "$REPO_ROOT/skills.py" "$COMMAND" "$@"
fi

exec python3 "$REPO_ROOT/skills.py" "$COMMAND" --workspace-root "$REPO_ROOT" "$@"
